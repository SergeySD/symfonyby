<?php

namespace Sfby\BlogBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\Validator\Constraints as Assert;
use Gedmo\Mapping\Annotation as Gedmo;
use Sfby\TagBundle\Entity\Tagging as BaseTagging;

/**
 * @ORM\Entity
 * @ORM\Table(name="sfby_tagging", uniqueConstraints={@ORM\UniqueConstraint(name="tagging_idx", columns={"tag_id","resource_type","resource_id"})})
 * @ORM\HasLifecycleCallbacks()
 */
class Tagging extends BaseTagging
{
    /**
     * @var int $id
     * 
     * @ORM\Id
     * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    protected $id;
    
    /**
     * @ORM\ManyToOne(targetEntity="Tag")
     * @ORM\JoinColumn(name="tag_id", referencedColumnName="id")
     */
    protected $tag;

    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set tag
     *
     * @param Tag $tag
     */
    public function setTag(Tag $tag)
    {
        $this->tag = $tag;
    }

    /**
     * Get tag
     *
     * @return Sfby\BlogBundle\Entity\Tag 
     */
    public function getTag()
    {
        return $this->tag;
    }
}