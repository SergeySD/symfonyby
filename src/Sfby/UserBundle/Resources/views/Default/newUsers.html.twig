{% if users|length %}
<div class="users">
    <h3>Новые пользователи</h3>
    <ul>
    {% for user in users %}
        <li>
            {% if user.image %}
                <span><img src="{{ user.webPath|apply_filter('profile_list_avatar') }}" /></span>
            {% endif %}
            <a href="{{url('profile_view', {'id': user.id})}}">{{ user.name }}</a>
        </li>
        {% if not loop.last %}
        <li>/</li>
        {% endif %}
    {% endfor %}
    </ul>
</div>
{% endif %}
