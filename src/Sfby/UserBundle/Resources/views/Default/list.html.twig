{% for user in pager.getResults %}
<div class="info_profile">
    <div class="profile_img">
        <a href="{{url('profile_view', {'id': user.id})}}">
            {% if user.image %}
                <img src="{{ user.webPath|apply_filter('profile_avatar') }}" />
            {% else %}
                <img src="{{asset('images/prof.png')}}" alt="" />
            {% endif %}
        </a>
    </div>
    <div class="description_profile">
        <ul>
            <li>{{ 'profile.show.name'|trans({}, 'FOSUserBundle') }}: <span>{{ user.name }}</span></li>
            <li>{{ 'profile.show.created_at'|trans({}, 'FOSUserBundle') }}: <span>{{ user.createdAt|date('d.m.Y') }}</span></li>
            <li>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}: <span>{{ user.username }}</span></li>
            <li>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}: <span>{{ user.email }}</span></li>
        </ul>
    </div>
</div>
{% endfor %}