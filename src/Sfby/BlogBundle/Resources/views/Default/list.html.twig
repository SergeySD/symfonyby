{% if tag %}
  <h1>Свежие записи > Метка {{ tag }}</h1>
{% else %}
  {% if category %}
  <h1>Свежие записи > {{ category }}</h1>
  {% else %}
  <h1>Свежие записи</h1>
  {% endif %}
{% endif %}
{% for blog in blogs %}
<div class="articles">
    <h3>{{blog.title}}</h3>
    <p class="author_article">{{"blog.author"|trans}}: {{blog.user.name}} </p>
    <div class="text_article">
        <p class="last">{{blog.text}}</p>
        <a class="read_next" href="{{path('blog_view', {'slug': blog.slug})}}">{{"blog.read_more"|trans}}</a>
        <div class="clearer"></div>
    </div>
    <ul class="tag">  
        {% for tag in blog.tags %}
            <li><a href="{{path('blog_by_tag', {'slug': tag.slug})}}">{{tag.name}}</a></li>
        {% endfor %}
    </ul>
    <div class="comment">
        <div class="rating">
            <a href="#"class="minus"></a>
            <span>135</span>
            <a href="#" class="plus"></a>
        </div>
        <a href="{{url('blog_view', {'slug': blog.slug})}}#disqus_thread" data-disqus-identifier="{{blog.id}}">{{"blog.comments"|trans}}</a>
    </div>
</div>
{% endfor %}