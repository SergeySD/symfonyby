        <div class="author">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{path('fos_user_profile_show')}}">{{ user.name }}</a>
                <a class="enter" href="{{path('fos_user_security_logout')}}"></a>
            {% else %}
                <a href="{{path('fos_user_security_login')}}">{{"header.login"|trans}}</a>
                <a href="{{path('fos_user_registration_register')}}">{{"header.register"|trans}}</a>
            {% endif %}
        </div>
        <ul>
            {% if app.session.locale=='ru_ru' %}
                <li class="active"><span>{{"header.ru"|trans}}</span></li>
            {% else %}
                <li><a href="{{path('locale', {'_locale': 'ru_ru'})}}">{{"header.ru"|trans}}</a></li>
            {% endif %}
                
            {% if app.session.locale=='en_us' %}
                <li class="active"><span>{{"header.en"|trans}}</span></li>
            {% else %}
                <li><a href="{{path('locale', {'_locale': 'en_us'})}}">{{"header.en"|trans}}</a></li>
            {% endif %}
        </ul>
    </div>
    <div class="main_nav">
        <div class="logo">
            <a class="cufon" href="{{path('homepage')}}">{{"header.title"|trans}}</a><br/>
            <a href="{{path('homepage')}}">Symfony Framework</a>
        </div>
        <ul>                                
            <li class="{{active=='blogs'?'active':''}}"><a href="{{path('blog_index')}}"><span>{{"topmenu.blog"|trans}}</span></a>
                <div class="submenu">
                    {% render "SfbyBlogBundle:Default:submenu" with {'active': (active=='blogs')?subactive:null} %}
                </div>
            </li>
            <li class="{{active=='people'?'active':''}}"><a href="{{path('user_index')}}"><span>{{"topmenu.people"|trans}}</span></a></li>
            <li class="{{active=='about'?'active':''}}"><a href="{{path('about')}}"><span>{{"topmenu.about"|trans}}</span></a></li>
        </ul>
        <div class="search">
            <input type="text" class="text" />
            <input type="submit" value="{{"header.search"|trans}}" class="submit" />
        </div>
    </div>

</div>