{% for blog in pager.getResults %}
<div class="articles">
    <h3>{{blog.title}}</h3>
    <p class="author_article">{{"blog.author"|trans}}: {{blog.user.name}} </p>
    <div class="text_article">
        <p class="last">{{blog.shortText|markdown}}</p>
        <a class="read_next" href="{{path('blog_view', {'slug': blog.slug})}}">{{"blog.read_more"|trans}}</a>
        <div class="clearer"></div>
    </div>
    <ul class="tag">  
        {% for tag in blog.tags %}
            <li><a href="{{path('blog_by_tag', {'slug': tag.slug})}}">{{tag.name}}</a></li>
        {% endfor %}
    </ul>
    <div class="comment">
        <div class="rating">
            <span id="votes{{blog.id}}" class="votes">0</span>
        </div>
        <a href="{{url('blog_view', {'slug': blog.slug})}}#disqus_thread" data-disqus-identifier="{{blog.id}}" class="count"></a>
    </div>
</div>
{% endfor %}
<script type="text/javascript">
    $(document).ready(updateVotes);
</script>
